{
    "manifest_version": 2,
    "name": "URL Blocker",
    "version": "1.0",
    "description": "Blocks requests to specific URLs.",
    "permissions": ["webRequest", "webRequestBlocking", "storage", "*://*/*"],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  